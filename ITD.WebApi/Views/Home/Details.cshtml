@model ITD.WebApi.Models.CurrentTests

@{
    ViewBag.Title = "- " + @Model.CoursePrefix + "" + @Model.CourseNumber + " " + @Model.CourseTest;
}

<h3>Details</h3>

<div>
    <h4>CurrentTests</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CoursePrefix)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CoursePrefix)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CourseNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CourseNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CourseTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CourseTitle)
        </dd>

        <dt>
            @if (Model.Sections.Count > 1)
            {
                <span>Sections</span>
            }
            else
            {
                <span>Section</span>
            }
        </dt>

        <dd>
            @for (int i = 0; i < Model.Sections.Count; i++)
            {
                if (i == (Model.Sections.Count - 1))
                {
                    @Model.Sections[i]
                }
                else
                {
                    @(Model.Sections[i] + ", ")
                }
            }
            
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Professor)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Professor)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CourseTest)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CourseTest)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TestOpens)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TestOpens)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TestCloses)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TestCloses)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StudentsEnrolled)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StudentsEnrolled)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TestsTaken)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TestsTaken)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
