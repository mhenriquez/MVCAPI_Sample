@model ITD.Checkin.Models.Appointment

@{
    ViewBag.Title = "Student Details";
}

<div>
    <p>&nbsp;</p>
    <p><span class="glyphicon glyphicon-arrow-left" aria-hidden="true"> </span> @Html.ActionLink("BACK TO LIST", "Index", "Home")</p>
</div>

<div class="dl-horizontal col-xs-12 col-md-5">
    <div id="@Model.nid" class="col-xs-12" style="margin:20px 0">
        <div class="col-xs-12 col-sm-6">
            <img class="img-responsive img-rounded" style="font-size:.8em" src="/verify/api/photo?nid=@Model.nid&iso=@Model.iso" alt="Photo of @Model.first_name @Model.last_name is not available." />
        </div>
        <div class="col-xs-12 col-sm-6">
            <h2>@Model.first_name @Model.last_name</h2>
            <hr />

            @if (Model.accepted_datetime != null)
            {
                <div style="border:1px solid #444;border-radius:5px;text-align:center;">
                    <h5>Checked in:</h5>
                    <p class="lead">@Model.accepted_datetime.Value.ToUniversalTime()</p>
                </div>
            }
        </div>
    </div>
</div>